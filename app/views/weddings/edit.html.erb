<h1>Edit wedding details</h1>

<%= render 'form' %>

<div class="container">
<a data-reveal-id="delete-wedding" class="button small radius">Delete Wedding</a>
</div>

<div class="reveal-modal" id="delete-wedding" data-reveal>
  <h1>Delete this wedding?</h1>
  <p class="lead">Are you sure you want to delete this wedding? This decision cannot be reversed!</p>
  <p><%= link_to "Delete Wedding", wedding_path(@wedding), method: :delete, class: "button small radius" %></p>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>